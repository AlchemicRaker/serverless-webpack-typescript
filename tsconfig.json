{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020",
      "outDir": "./dist/",

      "sourceMap": true,

      "noImplicitAny": true,
      "strict": true,

      "jsx": "react",
      "moduleResolution": "node",
      
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  }